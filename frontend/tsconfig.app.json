{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "types": ["node"],
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",  // Define o diretório base para o TypeScript
    "paths": {
      "@/*": ["src/*"],  // Alias para src dentro do frontend
      "~/*": ["src/*"]   // Se você usa ~ como alias também
    }
  }
}
